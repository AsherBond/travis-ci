{{#view SC.TemplateView id="repository" contentBinding="Travis.repositoryController"}}
  <h3><a {{bindAttr href="content.urlGithubRepository"}}>{{content.slug}}</a></h3>
  <ul class="github-stats">
    <li><a class="watchers" {{bindAttr href="content.urlGithubWatchers"}}></a></li>
    <li><a class="forks" {{bindAttr href="content.urlGithubNetwork"}}></a></li>
  </ul>
  <ul class="tabs">
    <li id="tab_current">
      <h5><a {{bindAttr href="content.urlCurrent"}}>Current</a></h5>
      <div class="tab">
        {{view SC.TemplateView templateName="build" contentBinding="Travis.currentTabController"}}
      </div>
    </li>
    <li id="tab_builds">
      <h5><a {{bindAttr href="content.urlBuilds"}}>Build History</a></h5>
      <div class="tab">
        {{view SC.TemplateView templateName="builds" contentBinding="Travis.buildsTabController"}}
      </div>
    </li>
    <li id="tab_parent">
      <h5><a {{bindAttr href="content.urlBuild"}}>Build</a></h5>
    </li>
    <li id="tab_build">
      <h5><a {{bindAttr href="content.urlBuild"}}>{{#view SC.TemplateView contentBinding="Travis.buildTabController"}}Build #{{content.number}}{{/view}}</a></h5>
      <div class="tab">
        {{view SC.TemplateView templateName="build" contentBinding="Travis.buildTabController"}}
      </div>
    </li>
  </ul>
{{/view}}
