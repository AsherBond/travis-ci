{{#with content}}
  <h3><a {{bindAttr href="urlGithubRepository"}}>{{slug}}</a></h3>
  <ul class="github-stats">
    <li><a class="watchers" {{bindAttr href="urlGithubWatchers"}}></a></li>
    <li><a class="forks" {{bindAttr href="urlGithubNetwork"}}></a></li>
  </ul>
  <ul class="tabs">
    <li id="tab_current">
      <h5><a {{bindAttr href="urlCurrent"}}>Current</a></h5>
      <div class="tab">
        {{view SC.TemplateView templateName="summary" contentBinding="Travis.controllers.repository.tabs.current"}}
        {{view SC.TemplateView templateName="build" contentBinding="Travis.controllers.repository.tabs.current"}}
      </div>
    </li>
    <li id="tab_builds">
      <h5><a {{bindAttr href="urlBuilds"}}>Build History</a></h5>
      <div class="tab">
        {{view SC.TemplateView templateName="builds" contentBinding="Travis.controllers.repository.tabs.builds"}}
      </div>
    </li>
    <li id="tab_parent">
      {{#view SC.TemplateView contentBinding="Travis.controllers.repository.tabs.build*content.parent"}}
        <h5><a {{bindAttr href="content.urlBuild"}}>Build #{{content.number}}</a></h5>
      {{/view}}
    </li>
    <li id="tab_build">
      {{#view SC.TemplateView contentBinding="Travis.controllers.repository.tabs.build"}}
        <h5><a {{bindAttr href="content.urlBuild"}}>Build #{{content.number}}</a></h5>
      {{/view}}
      <div class="tab">
        {{view SC.TemplateView templateName="summary" contentBinding="Travis.controllers.repository.tabs.build"}}
        {{view SC.TemplateView templateName="build" contentBinding="Travis.controllers.repository.tabs.build"}}
      </div>
    </li>
  </ul>
{{/with}}
